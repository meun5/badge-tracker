{% extends 'templates/default.twig' %}

{% block scripts %}
<script type="text/javascript" src="js/auth/register.js"></script>
<script type="text/javascript" src="js/form.js"></script>
{% endblock %}

{% block content %}
<form class="form-signin doPost" method="POST" action="{{ urlFor('auth.register.post') }}">
    <h2 class="form-signin-heading">Registration</h2>
    <div class="form-group">
        <label for="inputEmail" class="sr-only">Email <span style="color: red;">*</span></label>
        <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" required autofocus>
    </div>
    <div class="form-group">
        <label for="inputUsername" class="sr-only">Username <span style="color: red;">*</span></label>
        <input type="text" id="inputUsername" name="inputUsername" class="form-control" placeholder="Username" required>
    </div>
    <div class="form-group">
        <label for="inputFirstName" class="sr-only">First Name</label>
        <input type="text" id="inputFirstName" name="inputFirstName" class="form-control" placeholder="First Name">
    </div>
    <div class="form-group">
        <label for="inputLastName" class="sr-only">Last Name</label>
        <input type="text" id="inputLastName" name="inputLastName" class="form-control" placeholder="Last Name">
    </div>
    <div class="form-group">
        <label for="inputPassword" class="sr-only">Password <span style="color: red;">*</span></label>
        <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Password" required>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
    <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}">
</form>

{% endblock %}

{% block styles %}
<link href="css/auth/register.css" type="text/css" rel="stylesheet">
{% endblock %}

{% block afterfooter %}
<div class="container" style="display: none;" id="modalContainer">

<!-- Modal -->
<div class="modal fade" id="successModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-body" style="padding:40px 50px;">
            <h2 class="green">Success</h2>
            <div class="body">
                <span class="glyphicon glyphicon-ok" style="color: forestgreen;"></span><p id="successtext" style="color: forestgreen;">User registered successfully!</p>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>
        </div>
      </div>
    </div>
</div>
{% endblock %}
