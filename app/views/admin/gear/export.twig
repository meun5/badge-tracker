{% extends 'templates/admin.twig' %}

{% block title %}Report Export{% endblock %}

{% set n = 0 %}
{% set x = 0 %}
{% for i in gear %}
    {% set x = gear[n].amount %}
    {% set v = 0 %}
    {% for i in gear[n].checkout_history %}
        {% if gear[n].checkout_history[v].dateOut and gear[n].checkout_history[v].dateIn is empty %}
            {% set x = x - 1 %}
        {% endif %}
        {% set v = v + 1 %}
    {% endfor %}
    {% set n = n + 1 %}
{% endfor %}

{% block content %}
<div class="container">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Amount</th>
                    <th>Amount Left</th>
                    <th>Report</th>
                </tr>
            </thead>
            <tbody>
                {% if not gear %}
                    <tr>
                        <td>No Gear</td>
                        <td>---</td>
                        <td>---</td>
                        <td>---</td>
                        <td>---</td>
                    </tr>
                {% else %}
                    {% set v = 0 %}
                    {% for i in gear %}
                        <tr>
                            <td>{{ gear[v].name }}</td>
                            <td>{{ gear[v].brand }}</td>
                            <td>{{ gear[v].amount }}</td>
                            <td>{{ x }}</td>
                            <td><a href="#" class="gen-report" id="{{ gear[v].id }}">Generate Report</a></td>
                        </tr>
                    {% set v = v + 1 %}
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
<div class="container" style="display: none;" id="report-modal">

  <!-- Modal -->
  <div class="modal fade" id="reportModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="padding:35px 50px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-header">Generate Report</h4>
        </div>
        <div class="modal-body" style="padding:40px 50px;">
            <div class="download-container">
                <h4 class="border-bottom">Download Report</h4>
                <button class="btn download" type="button">Download</button>
            </div>

          <form class="email-form" method="POST" action="{{ urlFor('admin.gear.export.post') }}">
            <h4 class="form-heading border-bottom">Email Report</h4>
            <div class="form-group">
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" required autofocus>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Send Email</button>
            <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}" id="check">
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
          <span style="height: 50px; width: 50px;" class="image-holder"></span>
        </div>
      </div>

    </div>
  </div>
</div>
{% endblock %}

{% block scripts %}
<script src="/js/admin/gear/export.js" type="text/javascript" data-url="{{ url.base }}" class="js-container"></script>
<script src="https://raw.githubusercontent.com/johnculviner/jquery.fileDownload/master/src/Scripts/jquery.fileDownload.js" type="text/javascript"></script>
{% endblock %}
