{% extends 'templates/default.twig' %}

{% block title %}Gear Listing{% endblock %}

{% block content %}
<div class="gear-list">
    <span hidden="hidden" id="{{ csrf_token }}" class="hidden post"></span>
    <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Brand</th>
              <th>Amount</th>
              <th>Currently Checked Out</th>
              <th>Check Out</th>
            </tr>
          </thead>
          <tbody>
              {% if not gear %}
                <tr>
                  <td>No Gear</td>
                  <td>---</td>
                  <td>---</td>
                  <td>---</td>
                  <td>---</td>
                </tr>
            {% else %}
                {% set v = 0 %}
                {% for i in gear %}
                    <tr>
                      <td>{{ gear[v].name }}</td>
                      <td>{{ gear[v].brand }}</td>
                      <td>{{ gear[v].amount }}</td>
                      <td>
                          {% if gear[v].check == true %}
                            <span class="yes">Yes</span>
                          {% else %}
                            <span class="no">No</span>
                          {% endif %}
                      </td>
                      <td><span class="link checkurl" id="{{ gear[v].id }}" data-value="{% if gear[v].check == true %}in{% else %}out{% endif %}">{% if gear[v].check == true %}Check In{% else %}Check Out{% endif %}</span></td>
                    </tr>
                {% set v = v + 1 %}
                {% endfor %}
            {% endif %}
          </tbody>
        </table>
      </div>
</div>
{% endblock %}

{% block styles %}
<link href="{{ url.base }}/css/gear/list.css" type="text/css" rel="stylesheet">
{% endblock %}

{% block scripts %}
<script type="text/javascript" src="{{ url.base }}/js/gear/list.js"></script>
{% endblock %}
