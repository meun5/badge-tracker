  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand no-dec" href="{{ url.base }}">Troop 43</a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li {% if '/gear' in url.current %}class="active" {% endif %}><a href="{{ urlFor("gear.list") }}">Gear Checkout</a></li>
        <li {% if '/search' in url.current %}class="active" {% endif %}><a href="#">Search</a></li>
        <li {% if '/counslers' in url.current %}class="active" {% endif %}><a href="#">Counslers</a></li>
        {% if auth %}<li><a href="{{ urlFor('admin.home') }}">Administration</a></li>
                     <li><a href="{{ urlFor('auth.logout') }}">Logout</a></li>
